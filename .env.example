# ==============================================
# SENTINEL Configuration
# ==============================================
# Copy this file to .env and fill in your values

# ----------------------------------------------
# LLM API Keys (Choose one or both)
# ----------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here
# OR
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# LLM Model Selection
LLM_PROVIDER=anthropic  # Options: openai, anthropic
LLM_MODEL=claude-sonnet-4-20250514  # Or: gpt-4-turbo-preview
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=4000

# ----------------------------------------------
# Pathway Configuration
# ----------------------------------------------
PATHWAY_LICENSE_KEY=your-pathway-license-key
PATHWAY_PERSISTENCE_PATH=./data/pathway_cache
PATHWAY_THREADS=4

# ----------------------------------------------
# Google Drive Integration
# ----------------------------------------------
# For monitoring contracts/specs in Google Drive
GOOGLE_DRIVE_ENABLED=true
GOOGLE_DRIVE_CREDENTIALS=./config/google_credentials.json
GOOGLE_DRIVE_FOLDER_ID=your-google-drive-folder-id
GOOGLE_DRIVE_POLL_INTERVAL=5  # seconds

# ----------------------------------------------
# Local File Monitoring
# ----------------------------------------------
LOCAL_CONTRACTS_PATH=./data/contracts
LOCAL_LOGS_PATH=./data/logs
WATCH_INTERVAL=3  # seconds

# ----------------------------------------------
# Vector Store Configuration
# ----------------------------------------------
EMBEDDING_MODEL=text-embedding-3-small  # or: all-MiniLM-L6-v2
EMBEDDING_DIMENSION=1536
VECTOR_STORE_PATH=./data/embeddings
SIMILARITY_THRESHOLD=0.8

# ----------------------------------------------
# Agent Configuration
# ----------------------------------------------
# Agent 1: Spec Ingestion
AGENT_1_ENABLED=true
AGENT_1_BATCH_SIZE=10

# Agent 2: Intent Extraction
AGENT_2_ENABLED=true
AGENT_2_EXTRACTION_PROMPT=prompts/intent_extraction.txt

# Agent 3: Behavior Monitor
AGENT_3_ENABLED=true
AGENT_3_LOG_FORMAT=json  # Options: json, text

# Agent 4: Drift Detection
AGENT_4_ENABLED=true
AGENT_4_SEVERITY_THRESHOLD=medium  # Options: low, medium, high, critical

# Agent 5: Action Orchestrator
AGENT_5_ENABLED=true
AGENT_5_AUTO_ACKNOWLEDGE=false

# ----------------------------------------------
# Dashboard Configuration
# ----------------------------------------------
DASHBOARD_PORT=8501
DASHBOARD_TITLE=SENTINEL - Guardian of Semantic Truth
DASHBOARD_REFRESH_INTERVAL=5  # seconds
DASHBOARD_THEME=dark  # Options: light, dark

# ----------------------------------------------
# Alerting & Notifications
# ----------------------------------------------
# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#sentinel-alerts
SLACK_ENABLED=false

# Email Notifications (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=sentinel@your-domain.com
SMTP_TO=alerts@your-domain.com
EMAIL_ENABLED=false

# PagerDuty Integration (optional)
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_ID=your-service-id
PAGERDUTY_ENABLED=false

# ----------------------------------------------
# Logging Configuration
# ----------------------------------------------
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text
LOG_FILE=./logs/sentinel.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# ----------------------------------------------
# Database (Optional - for persistence)
# ----------------------------------------------
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql
DATABASE_URL=sqlite:///./data/sentinel.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/sentinel

# ----------------------------------------------
# Performance & Optimization
# ----------------------------------------------
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT=30  # seconds
RETRY_ATTEMPTS=3
RETRY_DELAY=5  # seconds

# Cache Settings
ENABLE_CACHING=true
CACHE_TTL=3600  # seconds
CACHE_MAX_SIZE=1000  # MB

# ----------------------------------------------
# Security
# ----------------------------------------------
# API Authentication (if exposing REST API)
API_KEY=your-secure-api-key-here
API_RATE_LIMIT=100  # requests per minute
ENABLE_AUTH=true

# ----------------------------------------------
# Development Settings
# ----------------------------------------------
DEBUG_MODE=false
MOCK_SERVICES=false  # Use mock services for testing
DEMO_MODE=false  # Use demo contracts/scenarios

# ----------------------------------------------
# Monitoring & Metrics
# ----------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check
HEALTH_CHECK_INTERVAL=60  # seconds
HEALTH_CHECK_TIMEOUT=10  # seconds
